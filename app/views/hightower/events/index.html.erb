<div class="row">
  <aside class="side-panel">
    <ul class="filter-options list-group">
      <%= render partial: @dashboard.events_tabs.tabs, as: :tab %>
    </ul>
  </aside>

  <section class="main-panel">
    <div class="page-header">
      <h1 class="page-title"><%= t('hightower.events.title') %></h1>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= @dashboard.title %>
        </h3>
      </div>
      <div class="panel-body">
        <table class="table">
          <thead>
            <tr>
              <th>User</th>
              <th>Action</th>
              <th>Info</th>
              <th>Tracked at</th>
            </tr>
          </thead>
          <tbody>        
            <%= render partial: 'hightower/events/event', collection: @dashboard.paginated_events %>
          </tbody>
        </table>
        <%= paginate @dashboard.paginated_events %>
      </div>
    </div>
    
  </section>
</div>